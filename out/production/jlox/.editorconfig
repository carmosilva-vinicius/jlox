# Configurações gerais
root = true

# Estilo de indentação
[*]
indent_style = space
indent_size = 4

# Quebra de linha
[*.{java,xml}]
end_of_line = lf
insert_final_newline = true

# Codificação de caracteres
[*.{java,xml}]
charset = utf-8

# Espaços em branco
[*.{java,xml}]
trim_trailing_whitespace = true
